<Window x:Class="WpfAppAITest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Test AI app" 
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Closing="MainWindow_OnClosing"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="750"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>


        <WindowsFormsHost Grid.Column="0" Grid.Row="0"  Name="Host" Width="700" Height="500">
        </WindowsFormsHost>

        <Border Grid.Column="2" Grid.Row="0" BorderBrush="Black" BorderThickness="1" CornerRadius="2" Margin="5">
            <Grid VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="400"/>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
                <ToolBar Margin="5" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" Grid.Row="0">
                    <ToggleButton Content="Linija" Width="100" Height="40" Margin="5"   IsChecked="{Binding IsLineDrawing, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <ToggleButton Content="Srelica" Width="100" Height="40" Margin="5"   IsChecked="{Binding IsArrowDrawing, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <ToggleButton Content="Kvadrat" Width="100" Height="40" Margin="5"   IsChecked="{Binding IsRactangeDrawing, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </ToolBar>

                <Canvas Name="OvajZaSliku" Width="700" MouseDown="OvajZaSliku_OnMouseDown" Grid.Row="1"></Canvas>
                <TextBlock HorizontalAlignment="Center" Margin="5,2" Grid.Row="2">Opis slike</TextBlock>
                <TextBox Margin="5,2" Grid.Row="3" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" HorizontalAlignment="Stretch" AcceptsReturn="True"></TextBox>
            </Grid>
        </Border>


        <StackPanel Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button  Width="150"  Margin="5" Height="50"  HorizontalAlignment="Right" Click="LoadApplication">Ucitaj app</Button>
            <Button  Width="150" Margin="0,5,5,5" Height="50"  HorizontalAlignment="Right" Click="TakaeScreenShot">Uhvati screenshot</Button>
        </StackPanel>
        
    </Grid>
</Window>
