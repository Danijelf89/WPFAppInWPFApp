<Window x:Class="WpfAppAITest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Test AI app" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Closing="MainWindow_OnClosing"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>


        <Grid x:Name="LeftGrid" Grid.Column="0" Grid.Row="1"/>

        

        <GroupBox Grid.Column="2" Grid.Row="1" FontWeight="Bold" Header="Screen Shot" Name="MyGroupBox" VerticalAlignment="Top" Width="700" Height="700" Margin="5">
            <Grid Name="MyGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                   
                </Grid.RowDefinitions>
                <Grid Name="OvajZaSliku" Width="700" VerticalAlignment="Stretch" Height="700" Margin="4"></Grid>
            </Grid>
        </GroupBox>


        <StackPanel Grid.Column="2" Grid.Row="2" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button  Width="150"  Margin="5" Height="50"  HorizontalAlignment="Right" Click="LoadApplication">Ucitaj app</Button>
            <Button  Width="150" Margin="0,5,5,5" Height="50"  HorizontalAlignment="Right" Click="TakaeScreenShot">Uhvati screenshot</Button>


        </StackPanel>
        
    </Grid>
</Window>
