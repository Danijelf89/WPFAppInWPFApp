<Window x:Class="WpfAppAITest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Test AI app" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Closing="MainWindow_OnClosing"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>


        <Grid x:Name="LeftGrid" Grid.Column="0" Grid.Row="0"  Margin="2,2,2,2" Width="700" Height="500"/>

        <Border Grid.Column="2" Grid.Row="0" BorderBrush="Black" BorderThickness="1" CornerRadius="2" Margin="5">
        <StackPanel  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5">
            <Canvas Name="OvajZaSliku" Width="700" Height="400" ></Canvas>
            <TextBlock HorizontalAlignment="Center" Margin="0,2,0,2">Opis slike</TextBlock>
            <TextBox Width="700" Height="500" Margin="0,2,0,2" HorizontalScrollBarVisibility="Auto" TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
        </StackPanel>
        </Border>


        <StackPanel Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button  Width="150"  Margin="5" Height="50"  HorizontalAlignment="Right" Click="LoadApplication">Ucitaj app</Button>
            <Button  Width="150" Margin="0,5,5,5" Height="50"  HorizontalAlignment="Right" Click="TakaeScreenShot">Uhvati screenshot</Button>
        </StackPanel>
        
    </Grid>
</Window>
